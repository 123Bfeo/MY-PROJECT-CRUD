<%-include('./partials/head') %> <%-include('./partials/header')%>
<div
  class="center"
  style="display: flex; flex-direction: column; align-items: center"
>
  <div
    class="atras"
    style="
      width: 28rem;
      margin-top: 10px;
      display: flex;
      justify-content: flex-start;
    "
  >
    <a href="/list" style="margin-bottom: 20px">
      <i class="fas fa-arrow-alt-circle-left" style="font-size: 28px"></i>
    </a>
  </div>
  <center>
    <form
      action="/edit/<%=cliente.id%>?_method=PUT"
      method="POST"
      enctype="application/x-www-form-urlencoded"
    >
      <div
        class="formu"
        style="display: flex; flex-direction: column; margin-top: 50px"
      >
        <div>
          <label for="nombre">
            <input
              style="
                width: 45vw;
                height: 48px;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
                margin-bottom: 10px;
              "
              type="text"
              name="firstname"
              id="nombre"
              placeholder="Nombre"
              value="<%=cliente.firstname%>"
            />
          </label>
          <% if(locals.errors && errors.firstname) { %>
          <div>
            <p style="color: brown"><%=errors.firstname.msg%></p>
          </div>
          <% } %>
        </div>

        <div>
          <label for="apellido">
            <input
              style="
                width: 45vw;
                height: 48px;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
                margin-bottom: 10px;
              "
              type="text"
              name="lastname"
              id="apellido"
              placeholder="Apellido"
              value="<%=cliente.lastname%>"
            />
          </label>
          <% if(locals.errors && errors.lastname) { %>
          <div>
            <p style="color: brown"><%=errors.lastname.msg%></p>
          </div>
          <% } %>
        </div>

        <div>
          <label for="ocupacion">
            <input
              style="
                width: 45vw;
                height: 48px;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
                margin-bottom: 10px;
              "
              type="text"
              name="ocupacion"
              id="ocupacion"
              placeholder="Ocupacion"
              value="<%=cliente.ocupacion%>"
            />
          </label>
          <% if(locals.errors && errors.ocupacion) { %>
          <div>
            <p style="color: brown"><%=errors.ocupacion.msg%></p>
          </div>
          <% } %>
        </div>

        <div>
          <label for="direccion">
            <input
              style="
                width: 45vw;
                height: 48px;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
                margin-bottom: 10px;
              "
              type="text"
              name="address"
              id="direccion"
              placeholder="Direccion"
              value="<%=cliente.address%>"
            />
          </label>
          <% if(locals.errors && errors.address) { %>
          <div>
            <p style="color: brown"><%=errors.address.msg%></p>
          </div>
          <% } %>
        </div>

        <div>
          <label for="telefono">
            <input
              style="
                width: 45vw;
                height: 48px;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
                margin-bottom: 10px;
              "
              type="text"
              name="phone"
              id="telefono"
              placeholder="Telefono"
              value="<%=cliente.phone%>"
            />
          </label>
          <% if(locals.errors && errors.phone) { %>
          <div>
            <p style="color: brown"><%=errors.phone.msg%></p>
          </div>
          <% } %>
        </div>
        <div>
          <label for="descripcion">
            <textarea
              style="
                width: 45vw;
                background-color: #f7f7f9;
                border: 0 solid #ced4da;
              "
              name="descripcion"
              id="descripcion"
              cols="30"
              rows="10"
              minlength="94"
              maxlength="94"
              value="<%=cliente.description%>"
            ></textarea>
          </label>
          <% if(locals.errors && errors.descripcion) { %>
          <div>
            <p style="color: brown"><%=errors.descripcion.msg%></p>
          </div>
          <% } %>
        </div>
      </div>

      <button class="btn btn-primary" type="submit">Guardar Cambios</button>
    </form>
  </center>
</div>

<%-include('./partials/footer') %>
