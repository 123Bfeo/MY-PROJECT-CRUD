<%-include('./partials/head') %> <%-include('./partials/header')%>
<div
  class="targeta"
  style="display: flex; align-items: center; flex-direction: column"
>
  <div class="atras" style="width: 18rem; margin-top: 10px">
    <a href="/list" style="margin-bottom: 20px">
      <i class="fas fa-arrow-alt-circle-left" style="font-size: 28px"></i>
    </a>
  </div>

  <div class="card" style="width: 18rem; margin: 10px 5px">
    <img
      style="height: 17rem"
      src="../profiles/<%=cliente[0].avatar%>"
      class="card-img-top"
      alt="..."
    />
    <div class="card-body">
      <h5 class="card-title">
        <%=cliente[0].firstname%> <%=cliente[0].lastname%>
      </h5>
      <p class="card-text"><%=cliente[0].description%></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%=cliente[0].address%></li>
      <li class="list-group-item"><%=cliente[0].ocupacion%></li>
      <li class="list-group-item"><%=cliente[0].phone%></li>
    </ul>
    <div class="card-body" style="display: flex; justify-content: space-around">
      <a class="card-link" href="/edit/<%=cliente[0].id%>">
        <button class="btn btn-primary">Editar</button>
      </a>

      <form
        action="/delete/<%=cliente[0].id%>?_method=DELETE"
        method="POST"
        enctype="application/x-www-form-urlencoded"
      >
        <button type="submit" class="btn btn-primary">Eliminar</button>
      </form>
    </div>
  </div>
</div>
<%-include('./partials/footer') %>
