<%-include('./partials/head') %> <%-include('./partials/header')%>

<div
  style="
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 5px auto;
  "
  class="padre"
>
  <div class="atras" style="width: 56rem; margin-top: 10px">
    <a href="/" style="margin-bottom: 20px">
      <i class="fas fa-arrow-alt-circle-left" style="font-size: 28px"></i>
    </a>
  </div>

  <section style="display: flex; flex-wrap: wrap" class="cont">
    <% for(let i = 0; i < clientes.length; i++) { %>
    <div class="targeta">
      <div class="card" style="width: 18rem; margin: 10px 5px">
        <img
          style="height: 17rem"
          src="../profiles/<%=clientes[i].avatar%> "
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title">
            <%=clientes[i].firstname%> <%=clientes[i].lastname%>
          </h5>
          <p class="card-text"><%=clientes[i].description%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%=clientes[i].address%></li>
          <li class="list-group-item"><%=clientes[i].ocupacion%></li>
          <li class="list-group-item"><%=clientes[i].phone%></li>
        </ul>
        <div
          class="card-body"
          style="display: flex; justify-content: space-around"
        >
          <a class="card-link" href="/edit/<%=clientes[i].id%>">
            <button class="btn btn-primary">Editar</button>
          </a>

          <form
            action="/delete/<%=clientes[i].id%>?_method=DELETE"
            method="POST"
            enctype="application/x-www-form-urlencoded"
          >
            <button type="submit" class="btn btn-primary">Eliminar</button>
          </form>
        </div>
      </div>
    </div>
    <% } %>
  </section>
</div>

<%-include('./partials/footer') %>
